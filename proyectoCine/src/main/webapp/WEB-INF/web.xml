<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <welcome-file-list>
        <welcome-file>inicio</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>auth-filter</filter-name>
        <filter-class>proyectocine.filter.AuthFilter</filter-class>
    </filter>
    <filter>
        <filter-name>admin-filter</filter-name>
        <filter-class>proyectocine.filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>auth-filter</filter-name>
        <url-pattern>/reserva/*</url-pattern>
        <url-pattern>/usuariocine/checkusuario</url-pattern>
        <url-pattern>/usuariocine/edicionusuario</url-pattern>
        <url-pattern>/edicionfunciones</url-pattern>
        <url-pattern>/edicionpeliculas</url-pattern>
        <url-pattern>/ABMCine</url-pattern>

    </filter-mapping>
    <filter-mapping>
        <filter-name>admin-filter</filter-name>
        <url-pattern>/edicionfunciones</url-pattern>
        <url-pattern>/edicionpeliculas</url-pattern>
        <url-pattern>/ABMCine</url-pattern>
        <url-pattern>/reserva/reservasall</url-pattern>
    </filter-mapping>
    <servlet>
        <description>controlador de logeo del usuario</description>
        <servlet-name>usuario-servlet</servlet-name>
        <servlet-class>proyectocine.proyectocine.UsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <description>controlador de logeo del usuario</description>
        <servlet-name>login-servlet</servlet-name>
        <servlet-class>proyectocine.proyectocine.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <description>controlador de cerrado de sesion del usuario</description>
        <servlet-name>logout-servlet</servlet-name>
        <servlet-class>proyectocine.proyectocine.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>edicionpeliculas-servlet</servlet-name>
        <servlet-class>proyectocine.proyectocine.EdicionPeliculasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>index-servlet</servlet-name>
        <servlet-class>proyectocine.proyectocine.IndexServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>funciones-servlet</servlet-name>
        <servlet-class>proyectocine.proyectocine.EdicionFuncionesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reserva-servlet</servlet-name>
        <servlet-class>proyectocine.proyectocine.ReservaEntradaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ABMCine</servlet-name>
        <servlet-class>proyectocine.proyectocine.ABMServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>usuario-servlet</servlet-name>
        <url-pattern>/usuariocine/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login-servlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout-servlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>edicionpeliculas-servlet</servlet-name>
        <url-pattern>/edicionpeliculas/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>index-servlet</servlet-name>
        <url-pattern>/inicio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>funciones-servlet</servlet-name>
        <url-pattern>/edicionfunciones/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reserva-servlet</servlet-name>
        <url-pattern>/reserva</url-pattern>
        <url-pattern>/reserva/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ABMCine</servlet-name>
        <url-pattern>/ABMCine</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
